                                            <TextBlock x:Name="tbNotificacionesTiempo" Foreground="White" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Padding="0,10" Margin="0,30,0,0">
                                        <TextBlock x:Uid="ConfigNotifications3" Foreground="White"/>
                                        <ToggleSwitch x:Name="tsNotificacionesSonido" Margin="0,15,0,0" Foreground="White" RequestedTheme="Dark"/>
                                    </StackPanel>

                                    <StackPanel x:Name="spConfigNotificacionesSonido" Orientation="Vertical" Padding="0,10" Margin="0,10,0,0">
                                        <TextBlock x:Uid="ConfigNotifications4" Foreground="White"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                            <ComboBox x:Name="cbConfigNotificacionesSonidoElegir" VerticalAlignment="Center" RequestedTheme="Dark" Foreground="White">
                                                <ComboBoxItem Content="Twitter.Default" Tag="ms-appx:///Assets/Sonidos/Twitter.Default.mp3"/>
                                                <ComboBoxItem Content="Windows.Default" Tag="ms-winsoundevent:Notification.Default"/>
                                                <ComboBoxItem Content="Windows.IM" Tag="ms-winsoundevent:Notification.IM"/>
                                                <ComboBoxItem Content="Windows.Mail" Tag="ms-winsoundevent:Notification.Mail"/>
                                                <ComboBoxItem Content="Windows.Reminder" Tag="ms-winsoundevent:Notification.Reminder"/>
                                                <ComboBoxItem Content="Windows.SMS" Tag="ms-winsoundevent:Notification.SMS"/>
                                            </ComboBox>

                                            <Button x:Name="botonConfigNotificacionesSonido" Style="{ThemeResource ButtonRevealStyle}" Background="Transparent" Padding="12,10" Margin="15,0,0,0">
                                                <Button.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <iconos:FontAwesome Icon="Solid_PlayCircle" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="White"/>
                                                        <TextBlock x:Uid="PlaySound" Foreground="White"/>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                        <Grid x:Name="gridConfiguracionInicio" Visibility="Collapsed">
                            <ScrollViewer VerticalScrollBarVisibility="Visible">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" Padding="0,10">
                                        <iconos:FontAwesome Icon="Solid_InfoCircle" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Uid="ConfigMessage" Margin="15,0,0,0" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Padding="0,10" Margin="0,30,0,0">
                                        <TextBlock x:Uid="ConfigHome" Foreground="White"/>
                                        <ToggleSwitch x:Name="tsInicioUsuario" Margin="0,15,0,0" Foreground="White" RequestedTheme="Dark"/>
                                    </StackPanel>
                                </StackPanel> 
                            </ScrollViewer> 
                        </Grid>
                    </Grid>
                </Grid>

                <Grid x:Name="gridMasCosas"/>
            </Grid>
        </NavigationView>      
    </Grid>
</Page>
