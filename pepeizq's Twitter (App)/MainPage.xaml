                                                <Button x:Name="botonComprarApp" Grid.Column="2" Style="{ThemeResource ButtonRevealStyle}" Background="Transparent" Padding="12,10">
                                                    <Button.Content>
                                                        <TextBlock x:Uid="BuyApp" Foreground="White"/>
                                                    </Button.Content>
                                                </Button>
                                            </Grid>
                                        </controls:DropShadowPanel>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" Padding="0,10">
                                        <iconos:FontAwesome Icon="Solid_InfoCircle" VerticalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Uid="ConfigMessage" Margin="15,0,0,0" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Padding="0,10" Margin="0,30,0,0">
                                        <TextBlock x:Uid="ConfigNotifications1" Foreground="White"/>
